{
  "name": "Order",
  "tableName": "orders",
  "description": "Customer orders",
  "columns": [
    {
      "name": "id",
      "type": "INTEGER",
      "primaryKey": true,
      "autoIncrement": true,
      "nullable": false
    },
    {
      "name": "user_id",
      "type": "INTEGER",
      "nullable": false,
      "foreignKey": {
        "entity": "User",
        "column": "id",
        "onDelete": "CASCADE",
        "onUpdate": "CASCADE"
      }
    },
    {
      "name": "order_number",
      "type": "VARCHAR(50)",
      "unique": true,
      "nullable": false
    },
    {
      "name": "total_amount",
      "type": "DECIMAL(10,2)",
      "nullable": false
    },
    {
      "name": "status",
      "type": "ENUM('pending','processing','shipped','delivered','cancelled')",
      "nullable": false,
      "default": "pending"
    },
    {
      "name": "created_at",
      "type": "TIMESTAMP",
      "nullable": false,
      "default": "CURRENT_TIMESTAMP"
    },
    {
      "name": "updated_at",
      "type": "TIMESTAMP",
      "nullable": false,
      "default": "CURRENT_TIMESTAMP"
    }
  ],
  "indexes": [
    {
      "name": "idx_user_id",
      "columns": ["user_id"]
    },
    {
      "name": "idx_order_number",
      "columns": ["order_number"],
      "unique": true
    },
    {
      "name": "idx_status",
      "columns": ["status"]
    }
  ]
}
