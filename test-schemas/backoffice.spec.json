                "shipped",
                "delivered",
                "cancelled"
              ]
            },
            "description": "status parameter"
          },
          {
            "name": "userId",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "description": "userId parameter"
          },
          {
            "name": "startDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            },
            "description": "startDate parameter"
          },
          {
            "name": "endDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            },
            "description": "endDate parameter"
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 20
            },
            "description": "limit parameter"
          },
          {
            "name": "offset",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            },
            "description": "offset parameter"
          },
          {
            "name": "sortBy",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "createdAt",
                "total",
                "status"
              ],
              "default": "createdAt"
            },
            "description": "sortBy parameter"
          },
          {
            "name": "sortOrder",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ],
              "default": "desc"
            },
            "description": "sortOrder parameter"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetAllOrdersResponse"
                }
              }
            },
            "headers": {
              "X-Server-Time": {
                "description": "Server processing time in milliseconds",
                "schema": {
                  "type": "string",
                  "example": "45.23ms"
                }
              },
              "X-Cervice-Request-Id": {
                "description": "Unique request identifier for tracing",
                "schema": {
                  "type": "string",
                  "example": "abc123xyz789"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ValidationError"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
